# Pilih salah satu provider (ai opsional tapi direkomendasikan):
# 'deepseek' (plus point) atau 'openai'. Kosongkan untuk mematikan AI.
LLM_PROVIDER=deepseek

# Untuk DeepSeek:
DEEPSEEK_API_KEY=sk-xxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com   # endpoint OpenAI-compatible
DEEPSEEK_MODEL=deepseek-chat                 # ganti sesuai langgananmu

# Untuk OpenAI (opsional kalau pilih openai):
OPENAI_API_KEY=sk-xxxx
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Scraper config
HEADLESS=true         # true/false
MAX_CONCURRENCY=3     # paralel fetch ke halaman detail
PAGE_TIMEOUT_MS=30000 # timeout tiap halaman
HARD_MAX_PAGES=50     # pagar biar ga infinite loop
